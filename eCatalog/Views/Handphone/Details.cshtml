@model eCatalog.Core.HandphoneClass.Handphone

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--bottom-header-->
<!--start-breadcrumbs-->
<!--end-breadcrumbs-->
<!--start-single-->
<div class="single contact">

    <div class="container">
        <div class="singe-main">
            <div class="col-md-12 single-main-left">
                <div class="sngl-top">
                    <div class="col-md-5 single-top-left">
                        <div class="flexslider">
                            <ul class="slides">
                                <li>
                                    @if (Model.ImageUrl == null || Model.ImageUrl == "")
                                    {
                                        <div class="thumb-image"><img src="~/Images/NoImage.jpg" true" class="img-responsive" alt="" /> </div>
                                    }
                                    else
                                    {
                                        <div class="thumb-image"><img src="@Model.ImageUrl" true" class="img-responsive" alt="" /> </div>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-7 single-top-right">
                        <div class="single-para simpleCart_shelfItem">
                            <h2>
                                @Model.Name 
                            </h2>
                            <h3 class="col-md-7">Harga Jual</h3>
                            <h5 class="col-md-7">Rp.@Model.BuyPrice</h5>
                            <h3 class="col-md-2-top-right"> Harga Beli</h3>
                            <h5 class="col-md-2-top-right">Rp.@Model.SellPrice</h5>
                            <p>@Model.ProductDescription</p>
                            <p></p>
                            <h4>
                                <span class="glyphicon glyphicon-eye-open"> @Model.Seen People seen</span>
                            </h4>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
