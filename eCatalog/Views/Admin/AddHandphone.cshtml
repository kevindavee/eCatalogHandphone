@model eCatalog.Core.HandphoneClass.Handphone

@{
    ViewBag.Title = "Add / Edit Hanphone";
}

<br />

@using (Html.BeginForm("AddHandphone", "Admin", new { id = Model.Id}, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Name</label>
        </div>
        <div class="col-md-6">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Brand</label>
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.BrandId, (SelectList)ViewBag.Brand, htmlAttributes: new { @class = "form-control"} )
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Product Description</label>
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.ProductDescription, new { htmlAttributes = new { @class = "form-control", rows="4" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Sell Price</label>
        </div>
        <div class="col-md-6">
            @Html.EditorFor(model => model.SellPrice, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Buy Price</label>
        </div>
        <div class="col-md-6">
            @Html.EditorFor(model => model.BuyPrice, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Image</label>
        </div>
        <div class="col-md-6">
            <input type="file" name="upload" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}

